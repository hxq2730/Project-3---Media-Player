        <Grid
            Grid.Row="2"
            Height="90"
            Background="DimGray"
            DockPanel.Dock="Bottom" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Margin="0,25,0,0"
     HorizontalAlignment="Center"
     VerticalAlignment="Center"
     Orientation="Horizontal">

                <fa:FontAwesome
         x:Name="volumeIcon"
         Margin="0,0,20,0"
         FontSize="20"
         Foreground="White"
         Icon="VolumeUp" />
                <Slider
         x:Name="volumeSlider"
         HorizontalAlignment="Stretch"
         Cursor="Hand"
         GotMouseCapture="SliderVolume_GotMouseCapture"
         LostMouseCapture="SliderVolume_LostMouseCapture"
         Maximum="100"
         Style="{StaticResource Horizontal_Slider}"
         ValueChanged="volumeSlider_ValueChanged"
         Value="50" />
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Vertical">

                <Grid
                    Margin="0,0,0,8"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>


                    <fa:FontAwesome
                        x:Name="RandomSongBtn"
                        Height="20"
                        Margin="20,0,20,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Cursor="Hand"
                        FontSize="20"
                        Foreground="White"
                        Icon="Random"
                        MouseDown="RandomSongBtn_MouseDown" />

                    <fa:FontAwesome
                        x:Name="PreSongBtn"
                        Grid.Column="1"
                        Margin="20,0,20,0"
                        HorizontalAlignment="Center"
                        Cursor="Hand"
                        FontSize="20"
                        Foreground="White"
                        Icon="StepBackward"
                        MouseDown="PreSongBtn_MouseDown" />
                    <fa:FontAwesome
                        x:Name="PlayIcon"
                        Grid.Column="2"
                        Margin="20,0,20,0"
                        HorizontalAlignment="Center"
                        Cursor="Hand"
                        FontSize="20"
                        Foreground="White"
                        Icon="Play"
                        MouseDown="PlayIcon_MouseDown" />
                    <fa:FontAwesome
                        x:Name="NextSongBtn"
                        Grid.Column="3"
                        Margin="20,0,20,0"
                        HorizontalAlignment="Center"
                        Cursor="Hand"
                        FontSize="20"
                        Foreground="White"
                        Icon="StepForward"
                        MouseDown="NextSongBtn_MouseDown" />

                    <fa:FontAwesome
                        x:Name="RepeatSongBtn"
                        Grid.Column="4"
                        Margin="20,0,20,0"
                        HorizontalAlignment="Center"
                        Cursor="Hand"
                        FontSize="20"
                        Foreground="White"
                        Icon="RotateRight"
                        MouseDown="RepeatSongBtn_MouseDown" />

                </Grid>

                <Grid VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="6*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>


                    <TextBlock
                        x:Name="DurationInfoSong"
                        Grid.Column="0"
                        Margin="0,0,10,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="12"
                        FontWeight="Normal"
                        Foreground="White"
                        TextWrapping="WrapWithOverflow">
                        0:00
                    </TextBlock>

                    <StackPanel Grid.Column="1">
                        <Slider
                            x:Name="timelineSlider"
                            HorizontalAlignment="Stretch"
                            Cursor="Hand"
                            
                            GotMouseCapture="SliderBarProcessing_GotMouseCapture"
                            IsSelectionRangeEnabled="True"
                            LostMouseCapture="SliderBarProcessing_LostMouseCapture"
                            Style="{StaticResource Horizontal_Slider}"
                            ValueChanged="TimelineSlider_ValueChanged"
                            Value="0" />
                    </StackPanel>

                    <TextBlock
                        x:Name="EndDurationInfoSong"
                        Grid.Column="2"
                        Margin="10,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="12"
                        FontWeight="Normal"
                        Foreground="White"
                        TextWrapping="WrapWithOverflow">
                        3:00
                    </TextBlock>

                </Grid>
            </StackPanel>
            



        </Grid>

    </Grid>
</Page>
